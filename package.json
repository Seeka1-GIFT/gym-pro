{
  "name": "gym-monorepo",
  "private": true,
  "workspaces": [
    "backend",
    "gym-frontend"
  ],
  "scripts": {
    "bootstrap": "npm --workspaces install",
    "build": "npm -ws run build",
    "dev": "concurrently -k -n BACKEND,FRONTEND -c yellow,cyan \"npm -w backend run dev\" \"npm -w gym-frontend run dev\"",
    "lint": "npm -ws run lint",
    "format": "npm -ws run format",
    "typecheck": "npm -ws run typecheck",
    "test": "npm -ws run test",
    "prepare": "echo skip husky in CI",
    "deploy:init": "tsx scripts/deploy/cli.ts init",
    "deploy:build:frontend": "tsx scripts/deploy/cli.ts build:frontend",
    "deploy:upload:frontend": "tsx scripts/deploy/cli.ts upload:frontend",
    "deploy:render": "tsx scripts/deploy/cli.ts render:deploy",
    "deploy:verify": "tsx scripts/deploy/cli.ts verify",
    "deploy:all": "tsx scripts/deploy/cli.ts all"
  },
  "devDependencies": {
    "adm-zip": "^0.5.16",
    "basic-ftp": "^5.0.5",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.5.2",
    "node-fetch": "^3.3.2",
    "ssh2-sftp-client": "^9.1.0",
    "tsx": "^4.20.5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
